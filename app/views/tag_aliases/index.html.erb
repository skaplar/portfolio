<p id="notice"><%= notice %></p>

<h1>Tag Aliases</h1>

<table class="table table-striped" >
  <thead>
    <tr>
      <th>Tag</th>
      <th>Alias</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tag_aliases.each do |tag_alias| %>
      <tr>
        <td><%= tag_alias.tag_id %></td>
        <td><%= tag_alias.alias %></td>
        <td><%= link_to 'Show', tag_alias %></td>
        <td><%= link_to 'Edit', edit_tag_alias_path(tag_alias) %></td>
        <td><%= link_to 'Destroy', tag_alias, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tag Alias', new_tag_alias_path %>
