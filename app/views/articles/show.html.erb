<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @article.content %>
</p>

<p>
  <strong>Tags:</strong>
  <% @article.tags.each do |tag| %>
    <b>#<%= tag.name %></b>
  <% end %>

</p>

<p>
  <strong>Image:</strong>
  <%= @article.article_image.attached? %>
</p>

 <p><%= image_tag(@article.article_image, :size => "480x240") if @article.article_image.attached?   %></p>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %> |
<% if @article.notes.count > 0 %>
  <%= link_to "Notes (#{@article.notes.count})", article_notes_path(@article) %> |
<% end %>
<%= link_to 'New Note', new_article_note_path(@article) %>
